@inherits LayoutComponentBase
@inject NavigationManager Nav
@inject ClothsStoreSys.Services.IAuthService AuthService
@inject ClothsStoreSys.Services.CustomAuthStateProvider AuthStateProvider
@inject Microsoft.Extensions.Localization.IStringLocalizer<ClothsStoreSys.SharedResources> L
@using System.Globalization
@inject Microsoft.JSInterop.IJSRuntime JS

@code {
    bool IsRtl => CultureInfo.CurrentCulture.Name.StartsWith("ar");

    async Task SetCulture(string culture)
    {
        await JS.InvokeVoidAsync("blazorSetCulture", culture);
    }

    Task SetArabic() => SetCulture("ar-EG");
    Task SetEnglish() => SetCulture("en-US");

    async Task Logout()
    {
        await AuthService.LogoutAsync();
        AuthStateProvider.NotifyAuthChanged();
        Nav.NavigateTo("/login", true);
    }
}

<div class="cashier-layout" dir="@(IsRtl ? "rtl" : "ltr")">
    <div class="topbar bg-light p-2 d-flex justify-content-between">
        <div>
            <a class="me-3" href="/pos">@L["POS"]</a>
            <a class="me-3" href="/returns">@L["Returns"]</a>
        </div>
        <div class="d-flex align-items-center">
            <div class="me-3">
                <button class="btn btn-sm btn-outline-primary me-1" @onclick="SetArabic">AR</button>
                <button class="btn btn-sm btn-outline-primary" @onclick="SetEnglish">EN</button>
            </div>
            <span class="me-3">@AuthService.GetCurrentUser()?.Username</span>
            <button class="btn btn-link" @onclick="Logout">@L["Logout"]</button>
        </div>
    </div>

    <main class="p-3">
        @Body
    </main>
</div>
