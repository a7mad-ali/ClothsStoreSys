@inherits LayoutComponentBase

<PageTitle>ClothsStoreSys</PageTitle>

@inject Microsoft.JSInterop.IJSRuntime JS
@inject Microsoft.Extensions.Localization.IStringLocalizer<ClothsStoreSys.Resources.SharedResources> L
@using System.Globalization

@code {
    bool IsRtl => CultureInfo.CurrentCulture.Name.StartsWith("ar");

    async Task SetCulture(string culture)
    {
        await JS.InvokeVoidAsync("blazorSetCulture", culture);
    }

    Task SetArabic() => SetCulture("ar-EG");
    Task SetEnglish() => SetCulture("en-US");
}

<div dir="@(IsRtl ? "rtl" : "ltr")">
    <div class="topbar p-2 bg-dark text-white d-flex justify-content-between">
        <div>@L["Dashboard"]</div>
        <div>
            <button class="btn btn-sm btn-light me-2" @onclick="SetArabic">AR</button>
            <button class="btn btn-sm btn-light" @onclick="SetEnglish">EN</button>
        </div>
    </div>
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
</div>
